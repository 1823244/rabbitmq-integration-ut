		КонецЕсли;
		
		ОбъектДанных.СтранаРегистрации = ПолучитьСсылкуСправочникаПоДаннымID(def.СтранаРегистрации, "СтраныМира");
		
		ОбъектДанных.ГоловнойКонтрагент = ПолучитьСсылкуСправочникаПоДаннымID(def.ГоловнойКонтрагент, "Контрагенты");
		
