			КонецЕсли; 
		КонецЕсли;
		
		ОбъектДанных.НДСПоСтавкам4и2 = def.НДСПоСтавкам4и2;
		
		ОбъектДанных.КодПоОКПО = def.КодПоОКПО;
		
		//ОбъектДанных.РегистрационныйНомер
		//ОбъектДанных.НалоговыйНомер
		//ОбъектДанных.НаименованиеМеждународное
		//ОбъектДанных.КСП_ОтгрузкаЗаказовКлиентаТребуетПодписания
		//ОбъектДанных.КСП_ИмеетсяБанковскаяГарантия
		//ОбъектДанных.КСП_ОписаниеБанковскойГарантии
		//ОбъектДанных.КСП_ТребуетПодписанияСпецификации
		
		//"ТЧКонтактнаяИнформация"
		//"ТЧДополнительныеРеквизиты"
		//"ТЧИсторияКПП"
		//"ТЧИсторияНаименований"
		
		ОбъектДанныхПартнер.ОбменДанными.Загрузка = Истина;
		ОбъектДанныхПартнер.Записать(); 
		
		ОбъектДанных.Партнер = ОбъектДанныхПартнер.Ссылка;
		ОбъектДанных.ОбменДанными.Загрузка = Истина;
		ОбъектДанных.Записать();
		
		ЗафиксироватьТранзакцию();
		
		//мЛоггер.инфо("Загружены: Контрагент : 1, Партнер : %2", ОбъектДанных, ОбъектДанныхПартнер);
		
		Возврат ОбъектДанных.Ссылка;
		
	Исключение
		
